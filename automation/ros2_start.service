[Unit]
Description=ROS2 Robot (Docker Compose)
After=docker.service network-online.target
Requires=docker.service

[Service]
Restart=always
ExecStart=/usr/bin/docker compose -f ~/env/automation/docker-compose.yml up
ExecStop=/usr/bin/docker compose -f ~/env/automation/docker-compose.yml down

[Install]
WantedBy=multi-user.target
