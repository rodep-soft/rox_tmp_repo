set shell := ["bash", "-c"]

default: build

# Install dependencies using rosdep
deps:
    rosdep install --from-paths src --ignore-src -r -y

# Update rosdep database
deps-update:
    rosdep update

# Full build with dependencies
build-full: deps build

build:
    colcon build  --symlink-install
    just source

clean:
    rm -rf log install build

source:
    source install/setup.bash

search:
    ros2 pkg executables | fzf

find:
    just search

ros:
    source /opt/ros/humble/setup.bash

fullbuild:
    just clean
    just build
    just source

launch:
    just source
    ros2 launch launch/launch.py

joylaunch:
    just source
    ros2 run joy joy_node &
    ros2 run joy_driver joy_driver_node &

mecanum:
    just joylaunch
    ros2 run mecanum_wheel_controller mecanum_wheel_controller_node 

kill:
    pkill -f ros2
    pkill -f ros

# 補完をきかせるためのsetup
setup:
    just --completions fish > ~/.config/fish/completions/just.fish
    just --completions bash > ~/.just-completion.bash
    echo 'source ~/.just-completion.bash' >> ~/.bashrc
    source ~/.bashrc

